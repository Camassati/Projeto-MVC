@model ContatoModel
@{
    ViewData["Title"] = "Confirmação apagar contato";
}

<div class="text-center"> 
    <h3> Realmente apagar contato @Model.Nome </h3>

    <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Index">Cancelar Exclusão</a>
<a class="btn btn-danger" role="button" asp-controller="Contato"asp-route-id="@Model.Id" asp-action="Apagar">Confirmar Exclusão</a>
</div>

